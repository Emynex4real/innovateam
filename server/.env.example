# Server Environment Variables Template
# Copy this file to .env and fill in your actual values

PORT=5000
NODE_ENV=development

# Database
DATABASE_URL=

# Supabase
SUPABASE_URL=
SUPABASE_KEY=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_JWT_SECRET=

# AI APIs
DEEPSEEK_API_KEY=
GEMINI_API_KEY=

# JWT
JWT_SECRET=
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=

# Email (Resend)
RESEND_API_KEY=
FRONTEND_URL=http://localhost:3000

# Redis (Upstash or standard)
# For Upstash: use https:// REST URL + token
# For standard Redis: use redis:// connection string
REDIS_URL=
REDIS_TOKEN=
ENABLE_CACHE=true

# Monitoring (Optional)
SENTRY_DSN=

# Payment (Paystack)
PAYSTACK_SECRET_KEY=

{
  "info": {
    "_postman_id": "b1c1e6b0-1234-4a1b-9a23-1d2e3f4a5b6c",
    "name": "Innovateam Auth API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Test Supabase Auth endpoints (login, validate, refresh) for backend."
  },
  "item": [
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"admin123\"\n}"
        },
        "url": {
          "raw": "http://localhost:5001/api/auth/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5001",
          "path": ["api", "auth", "login"]
        }
      },
      "response": []
    },
    {
      "name": "Validate Token",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "http://localhost:5001/api/auth/validate",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5001",
          "path": ["api", "auth", "validate"]
        }
      },
      "response": []
    },
    {
      "name": "Refresh Token",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
        },
        "url": {
          "raw": "http://localhost:5001/api/auth/refresh-token",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5001",
          "path": ["api", "auth", "refresh-token"]
        }
      },
      "response": []
    }
  ],
  "variable": [
    { "key": "token", "value": "" },
    { "key": "refreshToken", "value": "" }
  ]
}
